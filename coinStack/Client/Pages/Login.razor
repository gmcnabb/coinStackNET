@page "/login"

@if (isAuthenticated)
{
    <h3>Welcome, @user.Username!</h3>
}
else
{
    <h3>Login</h3>
}

<div class="container is-max-desktop">
    <EditForm Model="@user" OnValidSubmit="HandleLogin" autocomplete="off">
        <DataAnnotationsValidator />
        <div class="field">
            <label for="username">Username</label>
            <InputText id="username" @bind-Value="user.Username" class="input is-primary" />
        </div>
        <div class="field">
            <label for="password">Password</label>
            <InputText id="password" @bind-Value="user.Password" type="password" class="input is-primary" />
        </div>
        <button type="submit" class="is-primary is-outlined">Login</button>
        <ValidationSummary />
    </EditForm>
</div>

@code {
    private UserLogin user = new UserLogin();

    bool isAuthenticated = false;

    private void HandleLogin()
    {
        isAuthenticated = true;
        Console.WriteLine($"{user.Username} // {user.Password}");
    }
}
